# Application Settings
APP_NAME="AI Interview System"
APP_VERSION="1.0.0"
DEBUG=false

# Database
# For LOCAL development (SQLite):
DATABASE_URL="sqlite+aiosqlite:///./app.db"

# For PRODUCTION on Vercel (use Neon PostgreSQL - free):
# Get your connection string from https://neon.tech
# DATABASE_URL="postgresql+asyncpg://user:password@host/database?sslmode=require"

# Security - IMPORTANT: Generate a new secret key for production!
SECRET_KEY="your-super-secret-key-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins - Use ["*"] for all origins
CORS_ORIGINS=["*"]

# OpenAI Configuration
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4o-mini"
